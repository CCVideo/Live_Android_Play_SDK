<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pilot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/default_bg"
    tools:context="com.bokecc.dwlivemoduledemo.activity.PilotActivity">

    <TextView
        android:id="@+id/tv_center_in_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_start_live"
        style="@style/pilotButtonTheme"
        android:layout_below="@+id/tv_center_in_parent"
        android:layout_marginTop="66dp"
        android:text="@string/pilot_live" />

    <Button
        android:id="@+id/btn_start_replay"
        style="@style/pilotButtonTheme"
        android:layout_below="@id/btn_start_live"
        android:layout_marginTop="30dp"
        android:text="@string/pilot_replay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="@string/pilot_version"
        android:textColor="#AAAAAA"
        android:textSize="14sp" />
</RelativeLayout>
